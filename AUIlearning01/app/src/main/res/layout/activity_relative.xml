<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/android_icon"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/title"
        android:text="什么是手机软件app"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/android_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:layout_toRightOf="@id/android_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/title"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@id/title"
        android:text="2020-03-10"
        android:textColor="#4CAF50" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignLeft="@id/title"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="9dp"
        android:autoLink="email"
        android:text="@string/email" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignLeft="@id/title"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="173dp"
        android:text="@string/content" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="229dp"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/content"
        android:text="标题："
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="281dp"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/content"
        android:text="内容："
        android:textSize="20sp" />

    <EditText
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_title"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/tv_title"
        android:layout_toRightOf="@id/tv_title"
        android:hint="请输入回复内容的标题" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="275dp"
        android:layout_height="212dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="112dp"
        android:layout_toEndOf="@+id/tv_content"
        android:ems="10"
        android:gravity="start"
        android:hint="请输入需要回复的具体正文内容"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="49dp"
        android:text="回复" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/reply"
        android:layout_alignBaseline="@id/reply"
        android:layout_marginLeft="50dp"
        android:text="转发" />
</RelativeLayout>